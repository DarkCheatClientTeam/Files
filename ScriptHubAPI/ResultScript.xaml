<UserControl x:Class="DCC.ResultScript"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCC"
             mc:Ignorable="d" 
             Width="805" Height="130"
             MouseEnter="ResultScript_MouseEnter"
             MouseLeave="ResultScript_MouseLeave">
    <UserControl.Resources>
        <!-- Button Style -->
        <Style x:Key="ScriptCardButton" TargetType="Button">
            <Setter Property="Background" Value="#1A0000"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" Direction="270" Opacity="0.2" BlurRadius="3" Color="Black"/>
                                </Border.Effect>
                                <Grid>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Canvas x:Name="RippleCanvas" ClipToBounds="True">
                                <Ellipse x:Name="RippleEllipse" Width="0" Height="0" Fill="#40FFFFFF" Opacity="0"/>
                            </Canvas>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RippleEllipse" 
                                                     Storyboard.TargetProperty="Width"
                                                     From="0" To="300" Duration="0:0:0.6">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="RippleEllipse" 
                                                     Storyboard.TargetProperty="Height"
                                                     From="0" To="300" Duration="0:0:0.6">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="RippleEllipse" 
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.7" To="0" Duration="0:0:0.6">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF1D1D1D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="1" Direction="270" Opacity="0.3" BlurRadius="4" Color="#FFFFFEFE"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF141414"/>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Direction="0" Opacity="0.2" BlurRadius="2" Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#FF0C0C0C" BorderBrush="#FF252525" BorderThickness="1" CornerRadius="8">
        <Grid ClipToBounds="True">
            <Image x:Name="script_image" Stretch="UniformToFill" Margin="5,5,5,5" Opacity="0.2"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Height="120" Margin="10,0,214,0">
                <TextBlock x:Name="script_name" Text="Script Name" Foreground="White" FontSize="27" FontWeight="Medium" HorizontalAlignment="Left" Margin="0,5,0,0" Width="579" Height="37" />
                <TextBlock x:Name="script_game" Text="Script Game" Foreground="#FF6F6F6F" FontSize="15" Width="484" Height="21" HorizontalAlignment="Left" />
                <StackPanel x:Name="TagsPanel" Margin="0,4,0,0" Orientation="Horizontal"/>
            </StackPanel>
            <Button x:Name="CopyButton" Style="{StaticResource ScriptCardButton}" Click="CopyButton_Click" Background="#FF1C1C1C" Foreground="White" Content="Get Script" FontSize="25" Height="50" BorderBrush="#FF5F0000" FontFamily="Microsoft YaHei Light" Margin="609,39,25,39" />
            <TextBlock x:Name="script_views" Text="0123456789" Foreground="#FFA1A1A1" FontSize="20" Margin="10,0,120,4" VerticalAlignment="Bottom" Height="30"/>
        </Grid>
    </Border>
</UserControl>
